<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blau"
    android:padding="20dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Hauptmenue"
    tools:showIn="@layout/activity_hauptmenue">

    <ImageButton
        android:id="@+id/zuKarte"
        android:layout_width="match_parent"
        android:layout_height="209dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:adjustViewBounds="false"
        android:backgroundTint="@color/colorAccent"
        android:scaleType="fitCenter"
        android:src="@drawable/welt"
        android:text="OK"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="19sp"
        android:tint="@color/gelb" />

    <Button
        android:id="@+id/addFeature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:backgroundTint="@color/gelb"
        android:paddingLeft="50dp"
        android:paddingTop="20dp"
        android:paddingRight="50dp"
        android:paddingBottom="20dp"
        android:text="Feature hinzufÃ¼gen"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="19sp" />

    <Button
        android:id="@+id/weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:backgroundTint="@color/gelb"
        android:paddingLeft="50dp"
        android:paddingTop="20dp"
        android:paddingRight="50dp"
        android:paddingBottom="20dp"
        android:text="Wetter anzeigen"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="19sp" />

</LinearLayout>